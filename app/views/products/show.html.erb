<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-lg border-gold">
        <div class="card-header text-center">
          <h2><%= @product.name %></h2>
        </div>
        <div class="card-body">
          <div class="image-container mx-auto">
            <% if @product.image_url.present? %>
              <%= image_tag "#{@product.image_url}", class: "card-img-top card-image", alt: @product.name %>
            <% else %>
              <img src="https://via.placeholder.com/300x300?text=No+Image" 
                   alt="Placeholder image" class="card-image">
            <% end %>
          </div>
          <p class="text-gold text-center mt-3"><%= @product.description %></p>
          <hr>
          <h4 class="text-center price-gold">
            <strong>Price:</strong> <%= number_to_currency(@product.price) %>
          </h4>
        </div>
        <div class="card-footer text-center">
          <% if @product.stock_count > 0 %>
            <%= button_to "Add to Cart", add_to_cart_product_path(@product), 
                        method: :post, 
                        class: "btn elden-button" %>
          <% else %>
            <div class="out-of-stock-box">Out of Stock</div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>