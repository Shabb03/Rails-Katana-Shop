<div class="container mt-5">
  <h1><%= @product.name %></h1>
  <p><%= @product.description %></p>
  <p>Price: <%= number_to_currency(@product.price) %></p>
  
  <%= form_with url: add_to_cart_path(@product), method: :post, class: "mt-3" do %>
    <%= submit_tag "Add to Cart", class: "btn btn-primary" %>
  <% end %>
</div>