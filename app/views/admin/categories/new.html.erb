<h1 class="text-center">Create a New Category</h1>

<div class="d-flex justify-content-center">
  <div style="width: 50%;">
    <%= form_with model: @category, url: admin_categories_path, local: true do |f| %>
      <div class="mb-3">
        <%= f.label :name, "Category Name", class: "form-label" %>
        <%= f.text_field :name, class: "form-control", required: true %>
      </div>

      <div class="mb-3">
        <%= f.label :description, "Description", class: "form-label" %>
        <%= f.text_area :description, class: "form-control", rows: 5, required: true %>
      </div>

      <div class="mb-3">
        <%= f.submit "Create Category", class: "btn btn-primary" %>
        <%= link_to "Cancel", admin_categories_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>