<h1 class="text-center">Edit Category</h1>

<div class="d-flex justify-content-center">
  <div style="width: 50%;">
    <%= form_with model: @category, url: admin_category_path(@category), method: :patch, local: true do |f| %>
      <div class="mb-3">
        <%= f.label :name, "Category Name", class: "form-label" %>
        <%= f.text_field :name, class: "form-control", required: true %>
      </div>

      <div class="mb-3">
        <%= f.label :description, "Description", class: "form-label" %>
        <%= f.text_area :description, class: "form-control", rows: 5, required: true %>
      </div>

      <div class="mb-3">
        <%= f.submit "Update Category", class: "btn btn-primary" %>
        <%= link_to "Cancel", admin_categories_path, class: "btn btn-secondary" %>
      </div>
    <% end %>

    <hr>

    <div class="mt-3">
      <%= form_with url: admin_category_path(@category), method: :delete, data: { confirm: "Are you sure you want to delete #{@category.name}?" }, class: "d-inline" do %>
        <%= submit_tag "Delete #{@category.name}", class: "btn btn-danger" %>
      <% end %>
    </div>
  </div>
</div>