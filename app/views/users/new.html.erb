<h1 class="text-center my-4">Sign Up</h1>

<div class="container d-flex justify-content-center">
  <div class="w-50">
    <%= form_with model: @user, url: signup_path, local: true, data: { turbo: false } do |form| %>
      <div class="mb-3">
        <%= form.label :email, "Email address", class: "form-label" %>
        <%= form.email_field :email, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= form.label :password, "Password", class: "form-label" %>
        <%= form.password_field :password, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= form.label :username, "Username", class: "form-label" %>
        <%= form.text_field :username, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= form.label :firsName, "First Name", class: "form-label" %>
        <%= form.text_field :firsName, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= form.label :lastName, "Last Name", class: "form-label" %>
        <%= form.text_field :lastName, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= form.label :address, "Address", class: "form-label" %>
        <%= form.text_field :address, class: "form-control" %>
      </div>
      <div class="mb-3">
        <%= form.label :phone, "Phone Number", class: "form-label" %>
        <%= form.text_field :phone, class: "form-control" %>
      </div>
      <div class="mb-3 text-center">
        <%= form.submit "Sign Up", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>